<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context="cn.woblog.testloadimage.ListActivity">

        <android.support.v7.widget.RecyclerView android:id="@+id/rv"
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1"></android.support.v7.widget.RecyclerView>
        <ListView android:id="@+id/lv"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" android:layout_weight="1"
                  android:visibility="visible"></ListView>
    </LinearLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="动态调整内存" android:onClick="changeMemory"/>
</RelativeLayout>